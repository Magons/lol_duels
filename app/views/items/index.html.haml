%h1 Items
%table
  %tr
    %th image
    %th Name
    %th Description
    / %th Colloq
    / %th Plaintext
    / %th Into
    / %th gold
    %th tags
    / %th maps
    %th stats
  - @items.each do |item|
    %tr
      %td= image_tag("http://ddragon.leagueoflegends.com/cdn/#{ENV['PATCH_VERSION']}/img/item/#{item.data['image']['full']}")
      %td= item.data['name']
      %td= item.data['description']&.html_safe
      / %td= item.data['colloq']
      / %td= item.data['plaintext']
      / %td= item.data['into']
      / %td= item.data['gold']
      %td= item.data['tags']
      / %td= item.data['maps']
      %td= item.data['stats']
